{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Run Manifest v0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "generated_at_utc",
    "challenge_nonce",
    "artifacts"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "run_id": {
      "type": "string"
    },
    "generated_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "challenge_nonce": {
      "type": "string"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "artifact_id",
          "captured_at_utc"
        ],
        "properties": {
          "artifact_id": {
            "type": "string"
          },
          "captured_at_utc": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
