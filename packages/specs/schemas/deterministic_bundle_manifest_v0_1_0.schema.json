{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Deterministic Bundle Manifest v0.1.0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "scenarios"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "bundle_dir": {
      "type": "string",
      "minLength": 1
    },
    "bundle_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "scenario_id",
          "scenario_instance_id",
          "path",
          "sha256"
        ],
        "properties": {
          "scenario_id": {
            "type": "string",
            "minLength": 1
          },
          "scenario_instance_id": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        }
      }
    }
  }
}
