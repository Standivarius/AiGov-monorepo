{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Intake Source Snapshot v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "snapshot_id",
    "source_type",
    "source_files"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "intake_source_snapshot_v0_1"
    },
    "snapshot_id": {
      "type": "string",
      "minLength": 1
    },
    "source_type": {
      "type": "string",
      "enum": [
        "file_export"
      ]
    },
    "source_files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "source_path",
          "sha256"
        ],
        "properties": {
          "source_path": {
            "type": "string",
            "minLength": 1
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "content_type": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
