{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Module Card v0.1.0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "module_id",
    "summary",
    "boundaries",
    "knobs",
    "risks"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1.0"
    },
    "module_id": {
      "type": "string",
      "pattern": "^M_[A-Za-z0-9_]+$"
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "boundaries": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "inputs",
        "outputs"
      ],
      "properties": {
        "inputs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "contract_ref_path"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "contract_ref_path": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "contract_ref_path"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "contract_ref_path": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "knobs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "description",
          "value_type",
          "required"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_.-]+$"
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "value_type": {
            "type": "string",
            "enum": [
              "string",
              "number",
              "boolean",
              "enum",
              "path",
              "json"
            ]
          },
          "required": {
            "type": "boolean"
          },
          "default": {},
          "allowed_values": {
            "type": "array"
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
