{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Intake Bundle Extract v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "bundle_id",
    "source_snapshot_id",
    "extracted_fields"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "intake_bundle_extract_v0_1"
    },
    "bundle_id": {
      "type": "string",
      "minLength": 1
    },
    "source_snapshot_id": {
      "type": "string",
      "minLength": 1
    },
    "extracted_fields": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "field_path",
          "value",
          "evidence_refs"
        ],
        "properties": {
          "field_path": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": "string",
            "minLength": 1
          },
          "value_kind": {
            "type": "string",
            "enum": [
              "scalar",
              "object",
              "array",
              "unknown"
            ]
          },
          "evidence_refs": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "pattern": "^EV-[0-9]{3}$"
            }
          }
        }
      }
    }
  }
}
