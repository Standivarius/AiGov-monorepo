{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Intake Bundle Gap v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "bundle_id",
    "clarification_questions"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "intake_bundle_gap_v0_1"
    },
    "bundle_id": {
      "type": "string",
      "minLength": 1
    },
    "clarification_questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "question_id",
          "field_path",
          "question",
          "priority",
          "blocking"
        ],
        "properties": {
          "question_id": {
            "type": "string",
            "pattern": "^Q-[0-9]{3,}$"
          },
          "field_path": {
            "type": "string",
            "minLength": 1
          },
          "question": {
            "type": "string",
            "minLength": 1
          },
          "priority": {
            "type": "integer",
            "minimum": 1
          },
          "blocking": {
            "type": "boolean"
          },
          "evidence_refs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
